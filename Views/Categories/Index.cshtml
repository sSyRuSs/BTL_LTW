@model List<WebApplication1.Models.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayoutPage.cshtml";
}

<h2 class="mt-5">Index</h2>
<table class="table">
    <tr>
        <th>Category ID</th>
        <th>Catergory Name</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CatID</td>
            <td>@item.CatName</td>
            <td><a href="/Categories/EditCategory/@item.CatID">Edit</a> | <a href="/Categories/Delete/@item.CatID">Delete</a></td>
        </tr>
    }
</table>
<div class="d-grid gap-2 mx-auto">
    <a href="~/Categories/AddCategory"><button class="btn btn-primary" type="button">Add Item</button></a>
</div>
