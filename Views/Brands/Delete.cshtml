@model WebApplication1.Models.Brand
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/AdminLayoutPage.cshtml";
}

<h2 class="mt-5">Delete</h2>
<form action="/Brands/Delete/@Model.BrandID" method="post">
    <input type="hidden" name="Id" value="@Model.BrandID" />
    <table class="table">
        <tr>
            <th>Name</th>
            <td>@Model.BrandName</td>
        </tr>
    </table>
    <button type="submit" class="btn btn-success">Delete</button>
    <a href="/Brands/Index" class="btn btn-danger">Cancel</a>
</form>